<h2 class="text-center text-2xl font-bold text-gray-900 mb-6">
  Create your account
</h2>

<%= form_with model: @user, url: signup_path, class: "space-y-6", data: { turbo: true } do |f| %>
  <%= render "shared/form_errors", resource: @user %>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.text_field :first_name,
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
            required: true,
            autofocus: true %>
      </div>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.text_field :last_name,
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
            required: true %>
      </div>
    </div>
  </div>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.email_field :email,
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          autocomplete: "email",
          required: true %>
    </div>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.password_field :password,
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          autocomplete: "new-password",
          required: true %>
    </div>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.password_field :password_confirmation,
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          autocomplete: "new-password",
          required: true %>
    </div>
  </div>

  <div>
    <%= f.submit "Create account",
        class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer",
        data: { turbo_submits_with: "Creating account..." } %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <p class="text-sm text-gray-600">
    Already have an account?
    <%= link_to "Sign in", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
</div>
