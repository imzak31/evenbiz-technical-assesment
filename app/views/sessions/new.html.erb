<h2 class="text-center text-2xl font-bold text-gray-900 mb-6">
  Sign in to your account
</h2>

<%= form_with url: login_path, class: "space-y-6", data: { turbo: true } do |f| %>
  <div>
    <%= label_tag :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= email_field_tag :email, params[:email],
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          autocomplete: "email",
          required: true,
          autofocus: true %>
    </div>
  </div>

  <div>
    <%= label_tag :password, "Password", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= password_field_tag :password, nil,
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          autocomplete: "current-password",
          required: true %>
    </div>
  </div>

  <div>
    <%= submit_tag "Sign in",
        class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer",
        data: { turbo_submits_with: "Signing in..." } %>
  </div>
<% end %>

<div class="mt-6">
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="bg-white px-2 text-gray-500">Or</span>
    </div>
  </div>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      Don't have an account?
      <%= link_to "Sign up", signup_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
