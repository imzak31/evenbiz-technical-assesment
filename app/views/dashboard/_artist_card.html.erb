<%# Artist card for dashboard %>
<%# locals: (artist:, index:) %>
<%= link_to artist_path(artist), 
    class: "group flex flex-col items-center p-4 rounded-xl transition-all duration-300 hover:bg-gray-50 hover:shadow-lg hover:scale-105",
    style: "animation: fadeInUp 0.3s ease-out #{index * 0.1}s both;",
    data: { turbo_frame: "_top" } do %>
  
  <!-- Avatar with ring effect -->
  <div class="relative">
    <div class="absolute -inset-1 rounded-full bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 opacity-0 blur transition-opacity duration-300 group-hover:opacity-75"></div>
    <div class="relative h-16 w-16 overflow-hidden rounded-full ring-2 ring-white transition-transform duration-300 group-hover:scale-110">
      <% if artist.logo.attached? %>
        <%= image_tag artist.logo.variant(resize_to_fill: [64, 64]),
            class: "h-full w-full object-cover" %>
      <% else %>
        <div class="flex h-full w-full items-center justify-center bg-gradient-to-br from-indigo-400 to-purple-500">
          <span class="text-xl font-bold text-white"><%= artist.name.first.upcase %></span>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Artist name -->
  <p class="mt-3 text-center text-sm font-medium text-gray-900 transition-colors group-hover:text-indigo-600 line-clamp-1">
    <%= artist.name %>
  </p>
  
  <!-- Stats -->
  <p class="mt-1 text-center text-xs text-gray-500">
    <%= pluralize(artist.releases.count, 'release') %>
  </p>
<% end %>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
