<%= form_with model: artist, class: "space-y-4", data: { controller: "form", turbo: true } do |f| %>
  <%= render "shared/form_errors", resource: artist %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.text_field :name,
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          required: true,
          autofocus: true %>
    </div>
  </div>

  <div>
    <%= f.label :logo, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex items-center space-x-4">
      <% if artist.logo.attached? %>
        <%= image_tag artist.logo.variant(resize_to_fill: [64, 64]),
            class: "h-16 w-16 rounded-lg object-cover" %>
      <% else %>
        <span class="inline-flex h-16 w-16 items-center justify-center rounded-lg bg-gray-200">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </span>
      <% end %>
      <%= f.file_field :logo,
          accept: "image/*",
          class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
    </div>
  </div>

  <div>
    <%= f.label :banner, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <% if artist.banner.attached? %>
        <%= image_tag artist.banner.variant(resize_to_limit: [400, 100]),
            class: "mb-2 rounded-lg object-cover w-full h-24" %>
      <% end %>
      <%= f.file_field :banner,
          accept: "image/*",
          class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", artists_path,
        class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50",
        data: { turbo_frame: "modal" } %>
    <%= f.submit artist.persisted? ? "Update Artist" : "Create Artist",
        class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer",
        data: { form_target: "submit", turbo_submits_with: "Saving..." } %>
  </div>
<% end %>
