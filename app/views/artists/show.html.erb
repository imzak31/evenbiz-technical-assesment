<div class="space-y-6">
  <!-- Header with banner -->
  <div class="relative overflow-hidden rounded-lg bg-gray-200 h-48">
    <% if @artist.banner.attached? %>
      <%= image_tag @artist.banner, class: "w-full h-full object-cover" %>
    <% end %>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 p-6">
      <div class="flex items-end space-x-4">
        <% if @artist.logo.attached? %>
          <%= image_tag @artist.logo.variant(resize_to_fill: [96, 96]),
              class: "h-24 w-24 rounded-lg border-4 border-white shadow-lg object-cover" %>
        <% else %>
          <span class="inline-flex h-24 w-24 items-center justify-center rounded-lg border-4 border-white bg-gray-300 shadow-lg">
            <svg class="h-12 w-12 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197" />
            </svg>
          </span>
        <% end %>
        <div class="pb-1">
          <h1 class="text-3xl font-bold text-white"><%= @artist.name %></h1>
          <p class="text-gray-200">
            <%= pluralize(@artist.releases.count, 'release') %> · <%= pluralize(@artist.albums.count, 'album') %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-between items-center">
    <%= link_to "← Back to Artists", artists_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
    <div class="flex space-x-3">
      <%= link_to edit_artist_path(@artist),
          class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <svg class="-ml-0.5 mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      <%= button_to artist_path(@artist),
          method: :delete,
          class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500",
          data: { turbo_confirm: "Are you sure you want to delete this artist?" } do %>
        <svg class="-ml-0.5 mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <!-- Releases -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Releases</h3>
    </div>
    <ul class="divide-y divide-gray-200">
      <% @artist.releases.includes(:album).each do |release| %>
        <li>
          <%= link_to release_path(release), class: "block hover:bg-gray-50 px-4 py-4" do %>
            <div class="flex items-center">
              <% if release.album&.cover&.attached? %>
                <%= image_tag release.album.cover.variant(resize_to_fill: [48, 48]),
                    class: "h-12 w-12 rounded object-cover" %>
              <% else %>
                <div class="h-12 w-12 rounded bg-gray-200 flex items-center justify-center">
                  <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                  </svg>
                </div>
              <% end %>
              <div class="ml-4">
                <p class="font-medium text-gray-900"><%= release.name %></p>
                <p class="text-sm text-gray-500"><%= release.released_at.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
      <% if @artist.releases.empty? %>
        <li class="px-4 py-8 text-center text-gray-500">No releases yet</li>
      <% end %>
    </ul>
  </div>
</div>
