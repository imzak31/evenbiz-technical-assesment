<div class="space-y-6">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Artists</h1>
      <p class="mt-1 text-sm text-gray-500">Manage your artist catalog</p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_artist_path,
          class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500",
          data: { turbo_frame: "modal" } do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
        </svg>
        Add Artist
      <% end %>
    </div>
  </div>

  <!-- Search Bar -->
  <div class="flex items-center gap-4">
    <%= render "shared/search_bar", url: artists_path, placeholder: "Search artists by name...", value: @search_query %>
    <% if @search_query.present? %>
      <span class="text-sm text-gray-500"><%= @artists.total_count %> result(s)</span>
    <% end %>
  </div>

  <!-- Grid -->
  <div id="artists" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    <%= render @artists %>
  </div>

  <!-- Empty State -->
  <% if @artists.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No artists</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new artist.</p>
      <div class="mt-6">
        <%= link_to new_artist_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          Add Artist
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Pagination -->
  <% if @artists.present? %>
    <div class="mt-6">
      <%= paginate @artists %>
    </div>
  <% end %>
</div>

<%= turbo_frame_tag "modal" %>
