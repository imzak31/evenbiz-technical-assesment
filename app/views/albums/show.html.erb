<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to albums_path, class: "text-gray-400 hover:text-gray-500" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900"><%= @album.name %></h1>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to edit_album_path(@album), 
          data: { turbo_frame: "modal" },
          class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      <%= button_to album_path(@album), method: :delete,
          class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500",
          data: { action: "click->confirm#show", confirm_title: "Delete Album", confirm_message: "Are you sure you want to delete this album? This action cannot be undone." } do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Album Cover -->
    <div class="lg:col-span-1">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <% if @album.cover&.attached? %>
          <%= image_tag @album.cover, class: "w-full aspect-square object-cover" %>
        <% else %>
          <div class="w-full aspect-square bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
            <svg class="h-24 w-24 text-white/80" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Album Details -->
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Album Details</h3>
        </div>
        <dl class="divide-y divide-gray-200">
          <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @album.name %></dd>
          </div>
          <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-gray-500">Artist</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <% if @album.artist %>
                <%= link_to @album.artist.name, artist_path(@album.artist), class: "text-indigo-600 hover:text-indigo-900" %>
              <% else %>
                <span class="text-gray-400">No artist</span>
              <% end %>
            </dd>
          </div>
          <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-gray-500">Duration</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <% if @album.duration_in_minutes.present? %>
                <%= @album.duration_in_minutes %> minutes
              <% else %>
                <span class="text-gray-400">Not set</span>
              <% end %>
            </dd>
          </div>
          <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @album.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
        </dl>
      </div>

      <!-- Associated Release -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Release</h3>
        </div>
        <% if @album.release %>
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-900"><%= @album.release.name %></p>
                <% if @album.release.released_at %>
                  <p class="text-sm text-gray-500">Released <%= @album.release.released_at.strftime("%B %d, %Y") %></p>
                <% end %>
              </div>
              <%= link_to release_path(@album.release), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" do %>
                View Release â†’
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No release</h3>
            <p class="mt-1 text-sm text-gray-500">This album is not associated with a release yet.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= turbo_frame_tag "modal" %>
