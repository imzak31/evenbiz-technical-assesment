<%= form_with model: album, class: "space-y-6", data: { controller: "form", action: "submit->form#submit" } do |form| %>
  <%= render "shared/form_errors", resource: album %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, 
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Enter album name" %>
  </div>

  <div>
    <%= form.label :artist_id, "Artist", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :artist_id, Artist.order(:name), :id, :name, 
        { prompt: "Select an artist", include_blank: true },
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :duration_in_minutes, "Duration (minutes)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :duration_in_minutes, 
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        min: 0,
        placeholder: "e.g., 45" %>
  </div>

  <div>
    <%= form.label :cover, "Album Cover", class: "block text-sm font-medium text-gray-700" %>
    <% if album.cover&.attached? %>
      <div class="mt-2 flex items-center gap-4">
        <%= image_tag album.cover, class: "h-20 w-20 rounded-lg object-cover" %>
        <div class="text-sm text-gray-500">Current cover</div>
      </div>
    <% end %>
    <%= form.file_field :cover, 
        accept: "image/*",
        class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
  </div>

  <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", albums_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= form.submit album.persisted? ? "Update Album" : "Create Album",
        class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:opacity-50 disabled:cursor-not-allowed",
        data: { form_target: "submit" } %>
  </div>
<% end %>
