<%# API Explorer - Interactive Ruby HTTP Client %>
<%# Allows users to test API endpoints with filters, pagination, and search %>

<div data-controller="api-explorer" 
     data-api-explorer-token-value="<%= current_user.api_token %>"
     data-api-explorer-base-url-value="<%= request.base_url %>"
     class="bg-white shadow rounded-lg overflow-hidden">
  
  <!-- Header -->
  <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-indigo-500 to-purple-600">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-lg font-semibold text-white flex items-center gap-2">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
          API Explorer
        </h3>
        <p class="mt-1 text-sm text-indigo-100">Test the releases API with your personal token</p>
      </div>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/20 text-white">
        Ruby HTTP Client
      </span>
    </div>
  </div>

  <div class="p-6 space-y-6">
    <!-- API Token Display -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide">Your API Token</label>
          <code data-api-explorer-target="tokenDisplay" class="mt-1 text-sm font-mono text-gray-700"><%= current_user.api_token.truncate(40) %></code>
          <input type="hidden" data-api-explorer-target="tokenFull" value="<%= current_user.api_token %>">
        </div>
        <button type="button" 
                data-action="click->api-explorer#copyToken"
                data-api-explorer-target="copyTokenBtn"
                class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-indigo-600 bg-indigo-50 rounded-md hover:bg-indigo-100 transition-all">
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span>Copy</span>
        </button>
      </div>
    </div>

    <!-- Request Builder -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <!-- Endpoint -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Endpoint</label>
        <select data-api-explorer-target="endpoint" 
                data-action="change->api-explorer#updatePreview"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
          <option value="/releases">GET /api/releases</option>
        </select>
      </div>

      <!-- Page -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Page</label>
        <div class="flex items-center gap-1">
          <button type="button" 
                  data-action="click->api-explorer#previousPage"
                  class="inline-flex items-center px-2 py-2 border border-gray-300 rounded-l-md bg-white text-gray-500 hover:bg-gray-50">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <input type="number" 
                 data-api-explorer-target="page" 
                 data-action="input->api-explorer#updatePreview"
                 value="1" 
                 min="1"
                 class="block w-full border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm text-center">
          <button type="button" 
                  data-action="click->api-explorer#nextPage"
                  class="inline-flex items-center px-2 py-2 border border-gray-300 rounded-r-md bg-white text-gray-500 hover:bg-gray-50">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Limit -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Limit (per page)</label>
        <select data-api-explorer-target="limit" 
                data-action="change->api-explorer#updatePreview"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
          <option value="5">5</option>
          <option value="10" selected>10</option>
          <option value="25">25</option>
          <option value="50">50</option>
          <option value="100">100</option>
        </select>
      </div>

      <!-- Past Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Past/Upcoming</label>
        <select data-api-explorer-target="past" 
                data-action="change->api-explorer#updatePreview"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
          <option value="">All Releases</option>
          <option value="true">Past Releases</option>
          <option value="false">Upcoming Releases</option>
        </select>
      </div>
    </div>

    <!-- Search -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Search (fuzzy match on release, album, or artist name)</label>
      <div class="flex gap-2">
        <div class="relative flex-1">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input type="text" 
                 data-api-explorer-target="search" 
                 data-action="input->api-explorer#updatePreview"
                 placeholder="Search releases..."
                 class="block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
        </div>
        <button type="button"
                data-action="click->api-explorer#resetFilters"
                class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Reset
        </button>
      </div>
    </div>

    <!-- Request Preview -->
    <div class="bg-gray-900 rounded-lg overflow-hidden">
      <div class="px-4 py-2 bg-gray-800 flex items-center justify-between">
        <span class="text-xs font-medium text-gray-400 uppercase tracking-wide">Request Preview</span>
        <button type="button" 
                data-action="click->api-explorer#copyCurl"
                data-api-explorer-target="copyCurlBtn"
                class="inline-flex items-center px-2 py-1 text-xs text-gray-400 hover:text-white transition-all">
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span>Copy cURL</span>
        </button>
      </div>
      <div class="p-4 space-y-2">
        <div class="flex items-center gap-2">
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold bg-green-500 text-white">GET</span>
          <code data-api-explorer-target="requestUrl" class="text-sm text-green-400 font-mono break-all"></code>
        </div>
        <pre data-api-explorer-target="curlCommand" class="text-xs text-gray-400 font-mono whitespace-pre-wrap"></pre>
      </div>
    </div>

    <!-- Send Button -->
    <div class="flex justify-center">
      <button type="button"
              data-api-explorer-target="sendButton"
              data-action="click->api-explorer#sendRequest"
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <svg class="-ml-0.5 mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Send Request
      </button>
    </div>

    <!-- Response Section -->
    <div class="border border-gray-200 rounded-lg overflow-hidden">
      <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
        <div class="flex items-center gap-4">
          <span class="text-sm font-medium text-gray-700">Response</span>
          <div class="flex items-center gap-2">
            <span class="text-xs text-gray-500">Status:</span>
            <span data-api-explorer-target="status" class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              —
            </span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-xs text-gray-500">Time:</span>
            <span data-api-explorer-target="duration" class="text-xs font-mono text-gray-700">—</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-xs text-gray-500">Records:</span>
            <span data-api-explorer-target="recordCount" class="text-xs font-mono text-gray-700">—</span>
          </div>
        </div>
        <button type="button" 
                data-action="click->api-explorer#copyResponse"
                data-api-explorer-target="copyResponseBtn"
                class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-indigo-600 bg-indigo-50 rounded-md hover:bg-indigo-100 transition-all">
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span>Copy JSON</span>
        </button>
      </div>
      
      <!-- Pagination Meta -->
      <div data-api-explorer-target="paginationInfo" class="hidden px-4 py-2 bg-indigo-50 border-b border-indigo-100">
        <div class="flex items-center justify-between text-xs">
          <div class="flex items-center gap-4">
            <span class="text-indigo-700"><strong>Page:</strong> <span data-api-explorer-target="metaPage">-</span> of <span data-api-explorer-target="metaTotalPages">-</span></span>
            <span class="text-indigo-700"><strong>Total Records:</strong> <span data-api-explorer-target="metaTotalCount">-</span></span>
            <span class="text-indigo-700"><strong>Per Page:</strong> <span data-api-explorer-target="metaPerPage">-</span></span>
          </div>
          <div class="flex items-center gap-2">
            <button type="button" 
                    data-action="click->api-explorer#goToPrevPage"
                    data-api-explorer-target="prevPageBtn"
                    class="inline-flex items-center px-2 py-1 text-xs font-medium text-indigo-600 bg-white rounded border border-indigo-200 hover:bg-indigo-100 disabled:opacity-50 disabled:cursor-not-allowed">
              ← Prev
            </button>
            <button type="button" 
                    data-action="click->api-explorer#goToNextPage"
                    data-api-explorer-target="nextPageBtn"
                    class="inline-flex items-center px-2 py-1 text-xs font-medium text-indigo-600 bg-white rounded border border-indigo-200 hover:bg-indigo-100 disabled:opacity-50 disabled:cursor-not-allowed">
              Next →
            </button>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-900 max-h-[500px] overflow-auto">
        <pre data-api-explorer-target="response" class="p-4 text-sm text-emerald-400 font-mono whitespace-pre-wrap leading-relaxed">Click "Send Request" to see the response</pre>
      </div>
    </div>
  </div>
</div>
