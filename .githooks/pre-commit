#!/bin/bash

# Pre-commit hook to run CI checks locally
# Ensures code quality before commits are made

set -e

echo "ğŸ” Running pre-commit checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if Docker is running
if ! docker info > /dev/null 2>&1; then
    echo -e "${RED}âŒ Docker is not running. Please start Docker and try again.${NC}"
    exit 1
fi

# Check if containers are up and wait for them to be healthy
if ! docker compose ps --status running | grep -q "evenbiz_web"; then
    echo -e "${YELLOW}âš ï¸  Web container not running. Starting containers...${NC}"
    
    # Try --wait flag first, fall back to polling if not supported
    if ! docker compose up -d --wait 2>/dev/null; then
        docker compose up -d
        echo -e "${YELLOW}Waiting for containers to be ready...${NC}"
        retries=30
        until docker compose exec -T web echo "ready" > /dev/null 2>&1 || [ $retries -eq 0 ]; do
            retries=$((retries - 1))
            sleep 1
        done
        if [ $retries -eq 0 ]; then
            echo -e "${RED}âŒ Containers failed to start. Please check docker compose logs.${NC}"
            exit 1
        fi
    fi
fi

# Run RuboCop
echo -e "${YELLOW}ğŸ“ Running RuboCop...${NC}"
if docker compose exec -T web bundle exec rubocop --parallel; then
    echo -e "${GREEN}âœ… RuboCop passed${NC}"
else
    echo -e "${RED}âŒ RuboCop failed. Please fix the offenses before committing.${NC}"
    exit 1
fi

echo ""

# Run Brakeman
echo -e "${YELLOW}ğŸ”’ Running Brakeman security scan...${NC}"
if docker compose exec -T web bin/brakeman -q --no-pager; then
    echo -e "${GREEN}âœ… Brakeman passed${NC}"
else
    echo -e "${RED}âŒ Brakeman found security issues. Please fix them before committing.${NC}"
    exit 1
fi

echo ""

# Run the full RSpec test suite
echo -e "${YELLOW}ğŸ§ª Running RSpec tests...${NC}"
if docker compose exec -T web bundle exec rspec --fail-fast; then
    echo -e "${GREEN}âœ… RSpec passed${NC}"
else
    echo -e "${RED}âŒ RSpec tests failed. Please fix them before committing.${NC}"
    exit 1
fi

echo ""
echo -e "${GREEN}âœ… All pre-commit checks passed!${NC}"
